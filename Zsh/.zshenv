# Set DOTFILES variable
export DOTFILES=$HOME/.dotfiles

# Set MY<configuration file> variable for faster linking
export MYZSHRC=$DOTFILES/Zsh/.zshrc
export MYZSHENV=$DOTFILES/Zsh/.zshenv
export MYVIMRC=$DOTFILES/Vim/.vimrc
export MYGITCONFIG=$DOTFILES/Git/.gitconfig

# Set default editor for editing files withing CLI (Command Line Interface)
export EDITOR=vim
